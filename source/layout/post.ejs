<%
const getRandomNumbers = (min, max) => {
  const limit = 6;
  const len = max < limit ? max : limit;
  let numbers = [];
  let number;
  if (len === max) {
    numbers = [...Array(max).keys()]
  } else {
    min = Math.ceil(min);
    max = Math.floor(max);
    while (numbers.length < limit) {
      number = Math.floor(Math.random() * (max - min + 1)) + min;
      if (!numbers.includes(number)) {
        numbers.push(number);
      }
    }
  }
  return numbers;
}
