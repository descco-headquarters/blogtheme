<%
  const calcRT = text => {
    const wordsPerMinute = 200;
    let result;
    text =  strip_html(text) || "";
    let textLength = text.split(" ").length;

    if(textLength > 0){
      let value = Math.ceil(textLength / wordsPerMinute);
      result = `${value} min`;
    }
    return result;
  };
%>

